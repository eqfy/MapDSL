{
  "name": "cpsc-410-dsl-project",
  "description": "A dsl for map generation",
  "repository": "https://github.students.cs.ubc.ca/CPSC410-2022W-T1/Project1Group9",
  "scripts": {
    "build": "npm run antlr && rimraf ./build && tsc",
    "start": "npm run build && node build/main.js",
    "testparse": "npm run build && cp ./src/test/inputForParser.txt ./build/ && node build/parse.js",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "antlr": "antlr4ts -visitor ./src/parser/MapGeneratorParser.g4 ./src/parser/MapGeneratorLexer.g4 "
  },
  "devDependencies": {
    "@types/node": "^18.7.20",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4"
  }
}
